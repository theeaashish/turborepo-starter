{
  "name": "turborepo-setup",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "pnpm -F @repo/database generate",
    "db:push": "turbo -F @repo/database push",
    "db:studio": "turbo -F @repo/database studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F web...",
    "format": "turbo run format --continue",
    "format:fix": "turbo run format --continue -- --write",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint --continue -- --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm db:generate && pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx biome check --write --unsafe --config-path=apps/web"
    ],
    "*.{json,md,yaml,yml}": [
      "pnpm prettier --write"
    ]
  }
}
